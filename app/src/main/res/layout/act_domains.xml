<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/act_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/act_back_gray"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="evensel.pixelclearseo.ActRegister">

    <ListView

        android:id="@+id/lst_domain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp">
    </ListView>

    <Button
        android:id="@+id/cmd_add_domain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/act_domains_add_domain_back"
        android:drawableLeft="@drawable/act_domains_add_domain"
        android:paddingLeft="10dp"
        android:text="     Add New Domain"
        android:textAlignment="textStart"/>

    <TextView
        style="@style/act_domains_theme_lbl_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <TextView
        android:id="@+id/lbl_name"
        style="@style/act_domains_theme_lbl_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/act_domains_theme_lbl_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="E-mail Address"/>

    <TextView
        android:id="@+id/lbl_email"
        style="@style/act_domains_theme_lbl_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        style="@style/act_domains_theme_lbl_dis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Contact Number"/>

    <TextView
        android:id="@+id/lbl_contact_number"
        style="@style/act_domains_theme_lbl_val"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
