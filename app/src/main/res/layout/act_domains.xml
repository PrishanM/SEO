<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/act_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context="evensel.pixelclearseo.ActRegister"
    android:weightSum="2">

    <ListView
        android:id="@+id/lst_domain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:layout_margin="@dimen/activity_vertical_margin">
    </ListView>

    <LinearLayout
        android:id="@+id/cmd_add_domain"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center_vertical"
        android:background="@drawable/cornered_button"
        android:paddingLeft="@dimen/activity_horizontal_margin">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_normal"
            android:src="@drawable/act_domains_add_domain"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_large"
            android:text="Add New Domain"
            android:typeface="monospace"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:gravity="left"
            android:paddingLeft="@dimen/activity_horizontal_margin"/>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorRow"
        android:padding="@dimen/activity_vertical_margin">

        <TextView
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Name"/>

        <TextView
            android:id="@+id/lbl_name"
            style="@style/act_domains_theme_lbl_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="E-mail Address"/>

        <TextView
            android:id="@+id/lbl_email"
            style="@style/act_domains_theme_lbl_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:typeface="monospace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:text="Contact Number"/>

        <TextView
            android:id="@+id/lbl_contact_number"
            style="@style/act_domains_theme_lbl_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>









</LinearLayout>
