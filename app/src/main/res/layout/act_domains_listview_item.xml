<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="10dp"
              android:background="#aaffffff"
              android:orientation="horizontal"
              android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbl_dis"
            style="@style/act_domains_theme_lst_item_lbl_dis"
            android:text="domain"/>

        <TextView
            android:id="@+id/lbl_val"
            style="@style/act_domains_theme_lst_item_lbl_val"
            android:text="domain"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/cmd_rm"
        style="@style/act_domains_theme_lst_item_image_button"
        android:src="@drawable/act_domains_rm_domain"/>

    <ImageView
        android:id="@+id/cmd_check"
        style="@style/act_domains_theme_lst_item_image_button"
        android:src="@drawable/act_domains_check_domain"/>

</LinearLayout>